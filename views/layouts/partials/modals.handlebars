<div class="modal fade modalNote" id="noteModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Save notes for: <b> {{this.title}}</b></h4>
            </div>
            <div class="modal-body">
                {{#if this.notes}}
                    {{#each this.notes}}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p class="previousNotes"> {{this.body}}</p>
                                <button type="button" class="btn btn-danger deleteNote" data-note-id={{this._id}} data-article-id={{this.article}}>X</button>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>There are no notes for this article yet. Please be the first to leave a comment here</h4>
                        </div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <textarea id="noteText{{this._id}}" class="form-control" rows="4" placeholder="New Note"></textarea>
                </div>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-success saveNote" data-id={{this._id}}>Save Note</button>
            </div>
        </div>
    </div>
</div>